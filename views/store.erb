<h2><%= @store.name() %></h2>


<% if @store_brands.any?() %>
<h3>Our Brands</h3>
  <div class="row brands-row">
    <% @store_brands.each()do |brand| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail" href="#"><img src="/img/<%= brand.image() %>" alt="Adidas" class="img-responsive"/>
        <div class="caption">
          <h3><%= brand.name() %></h3>
        </div>
      </div>
    </div>
    <% end  %>
  </div>
<% end  %>

<div class="bottom">
  <a class="btn btn-success" href="/">Home</a>
</div>
